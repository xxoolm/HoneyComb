<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="github.tornaco.practice.honeycomb.locker.ui.setup.SetupViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/verify_displayer_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:toolbarAction="@{viewmodel}" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/appbar">

                    <RelativeLayout
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/common_view_margin_middle">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/verify_app_icon_w"
                            android:layout_height="@dimen/verify_app_icon_h"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_touch_app_white_24dp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/common_view_margin_middle"
                            android:layout_marginTop="@dimen/common_view_margin_default"
                            android:text="@string/setup_step_draw_pattern"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/md_white" />

                    </RelativeLayout>

                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <RelativeLayout
                android:id="@+id/pattern_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="@dimen/common_view_margin_default"
                android:layout_marginBottom="@dimen/common_view_margin_large"
                android:layout_weight="3"
                android:gravity="center|bottom">

                <com.andrognito.patternlockview.PatternLockView
                    android:id="@+id/pattern_lock_view"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"
                    app:aspectRatio="square"
                    app:aspectRatioEnabled="true"
                    app:correctStateColor="?colorAccent"
                    app:dotAnimationDuration="200"
                    app:dotCount="3"
                    app:dotNormalSize="12dp"
                    app:dotSelectedSize="24dp"
                    app:normalStateColor="@color/colorAccent"
                    app:pathEndAnimationDuration="100"
                    app:pathWidth="4dp"
                    app:wrongStateColor="@color/md_amber_900" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>